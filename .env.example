# Environment Variables for Diet Daily Medical App

# App Configuration
NEXT_PUBLIC_APP_NAME="Diet Daily"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV="development"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
API_SECRET_KEY="your-secret-key-here"

# Database Configuration (when ready to implement)
DATABASE_URL="postgresql://username:password@localhost:5432/diet_daily"
DATABASE_SSL="false"

# Authentication (when implementing auth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here"
HASH_SALT="your-hash-salt-here"

# AI Recognition Services (Optional - will fallback to intelligent analysis if not provided)
# Uncomment and add your API keys to enable real AI recognition

# OpenAI GPT-4 Vision (推薦 - 最準確的食物識別)
# Get API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY="your_openai_api_key_here"

# Claude AI API (IBD 營養師評分系統)
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
CLAUDE_MODEL="claude-3-sonnet-20240229"
CLAUDE_MAX_TOKENS="1000"
CLAUDE_TEMPERATURE="0.3"

# Google Vision API (備選方案)
# Get API key from: https://console.cloud.google.com/apis/credentials
# GOOGLE_VISION_API_KEY="your_google_vision_api_key_here"

# Azure Computer Vision (備選方案)
# Get credentials from: https://portal.azure.com/
# AZURE_VISION_KEY="your_azure_vision_key_here"
# AZURE_VISION_ENDPOINT="https://your_resource.cognitiveservices.azure.com/"

# Email Services (future integrations)
# SENDGRID_API_KEY="your-sendgrid-key-for-emails"

# Medical Data Configuration
NEXT_PUBLIC_DATA_RETENTION_DAYS="2555" # 7 years as required for medical data
NEXT_PUBLIC_OFFLINE_STORAGE_DAYS="30"
NEXT_PUBLIC_MAX_FILE_SIZE_MB="10"

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,zh-TW,zh-HK"

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED="true"
NEXT_PUBLIC_PUSH_NOTIFICATIONS="true"

# Development
NEXT_PUBLIC_DEBUG_MODE="false"
ANALYZE_BUNDLE="false"

# Taiwan/Hong Kong Specific
NEXT_PUBLIC_HEALTHCARE_SYSTEM="taiwan" # or "hongkong"
NEXT_PUBLIC_CURRENCY="TWD" # or "HKD"
NEXT_PUBLIC_TIMEZONE="Asia/Taipei" # or "Asia/Hong_Kong"

# Medical Compliance
GDPR_COMPLIANCE="true"
HIPAA_COMPLIANCE="true"
DATA_ANONYMIZATION="true"

# Feature Flags
NEXT_PUBLIC_FEATURE_AI_INSIGHTS="false"
NEXT_PUBLIC_FEATURE_TELEHEALTH="false"
NEXT_PUBLIC_FEATURE_SOCIAL="false"
NEXT_PUBLIC_FEATURE_EXPORTS="true"
NEXT_PUBLIC_FEATURE_OFFLINE_FIRST="true"

# IBD 評分系統配置
IBD_SCORING_ENABLED="true"
IBD_SCORING_FALLBACK_MODE="true"
IBD_SCORING_CACHE_TTL="3600"
IBD_SCORING_BATCH_SIZE="5"

# FODMAP 資料庫配置
FODMAP_DATA_SOURCE="monash_university"
FODMAP_AUTO_UPDATE="false"
FODMAP_CONFIDENCE_THRESHOLD="0.8"

# 用戶反饋系統配置
FEEDBACK_COLLECTION_ENABLED="true"
FEEDBACK_MODERATION_ENABLED="true"
FEEDBACK_ANALYTICS_ENABLED="true"
FEEDBACK_MIN_SCORE_CONFIDENCE="0.5"

# API 安全配置
API_RATE_LIMIT_REQUESTS="100"
API_RATE_LIMIT_WINDOW="3600"
API_REQUEST_TIMEOUT="30000"
ADMIN_VERIFICATION_REQUIRED="true"

# Supabase 配置
NEXT_PUBLIC_SUPABASE_URL="your_supabase_project_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"