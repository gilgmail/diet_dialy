# Environment Variables for Diet Daily Medical App

# App Configuration
NEXT_PUBLIC_APP_NAME="Diet Daily"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV="development"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
API_SECRET_KEY="your-secret-key-here"

# Database Configuration (when ready to implement)
DATABASE_URL="postgresql://username:password@localhost:5432/diet_daily"
DATABASE_SSL="false"

# Authentication (when implementing auth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here"
HASH_SALT="your-hash-salt-here"

# External Services (future integrations)
# OPENAI_API_KEY="your-openai-key-for-ai-features"
# SENDGRID_API_KEY="your-sendgrid-key-for-emails"

# Medical Data Configuration
NEXT_PUBLIC_DATA_RETENTION_DAYS="2555" # 7 years as required for medical data
NEXT_PUBLIC_OFFLINE_STORAGE_DAYS="30"
NEXT_PUBLIC_MAX_FILE_SIZE_MB="10"

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,zh-TW,zh-HK"

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED="true"
NEXT_PUBLIC_PUSH_NOTIFICATIONS="true"

# Development
NEXT_PUBLIC_DEBUG_MODE="false"
ANALYZE_BUNDLE="false"

# Taiwan/Hong Kong Specific
NEXT_PUBLIC_HEALTHCARE_SYSTEM="taiwan" # or "hongkong"
NEXT_PUBLIC_CURRENCY="TWD" # or "HKD"
NEXT_PUBLIC_TIMEZONE="Asia/Taipei" # or "Asia/Hong_Kong"

# Medical Compliance
GDPR_COMPLIANCE="true"
HIPAA_COMPLIANCE="true"
DATA_ANONYMIZATION="true"

# Feature Flags
NEXT_PUBLIC_FEATURE_AI_INSIGHTS="false"
NEXT_PUBLIC_FEATURE_TELEHEALTH="false"
NEXT_PUBLIC_FEATURE_SOCIAL="false"
NEXT_PUBLIC_FEATURE_EXPORTS="true"
NEXT_PUBLIC_FEATURE_OFFLINE_FIRST="true"